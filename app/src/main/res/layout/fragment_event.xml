<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.game.event.EventFragment">
    <TextView
            android:text="Vamos começar!"
            style="@style/title_game_wizard"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <TextView
            android:text="Qual o nome do evento?"
            android:layout_height="wrap_content"
            style="@style/subtitle_game_wizard"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <EditText
            style="@style/input_wizard"
            android:id="@+id/inputEvent"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:hint="Ex: Final do mundial de clubes de 2019"/>
    <Button
            style="@style/custom_button"
            android:text="PRÓXIMO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/eventBtNext"
            app:layout_constraintStart_toStartOf="@+id/inputEvent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/inputEvent" app:layout_constraintEnd_toEndOf="@+id/textView"
    />
</androidx.constraintlayout.widget.ConstraintLayout>